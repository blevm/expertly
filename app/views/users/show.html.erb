<h1><%=@user.name%></h1>
<h2><%= @user.username %></h2>

<% if current_user == @user %>
  <p>THIS IS YOUR ACCOUNT PAGE</p>
<% end %>

<h3>Your Skills:</h3>
<ul>
  <%@user.skills.sort_by { |s| s.category.name}.each do |s|%>
    <li><%=s.name_and_category%></li>
  <%end %>
</ul>

<%if @user.teacher == true%>
  <%=link_to "Edit Your Teacher Profile", teacher_edit_path(@user)%><br></br>
<%end%>
<%if @user.student == true%>
  <%=link_to "Edit Your Student Profile", edit_user_path(@user)%>
<%end%>
