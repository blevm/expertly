<div style="padding: 50px 300px 0px 300px;">
<div align="center" class="jumbotron" style="padding:30px 0px; min-width: 450px; background-color: rgba(233, 236, 239, 0.9);">
  <div class="container" style="padding: 0px 50px 0px 50px;  max-width: 550px; min-width: 300px;" align="center">
<h1>Sign Up!</h1>


<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |e| %>
      <li><%= e %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <div class="form-group row">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", style: "max-width: 500px;" %>
  </div>
  <div class="form-group row">
    <%= f.label :location %>
    <%= f.text_field :location, class: "form-control", style: "max-width: 500px;" %>
  </div>
  <div class="form-group row">
    <%= f.label :username %>
    <%= f.text_field :username, class: "form-control", style: "max-width: 500px;" %>
  </div>
  <div class="form-group row">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control", style: "max-width: 500px;" %>
  </div>
  <div class="form-group row">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control", style: "max-width: 500px;" %>
  </div>
  <div class="form-check form-check-inline">
    <%= f.check_box :teacher, class: "form-check-input"%>
    <%= f.label :teacher, class: "form-check-label" %>
  </div>
  <div class="form-check form-check-inline">
    <%= f.check_box :student, class: "form-check-input" %>
    <%= f.label :student, class: "form-check-label" %>
  </div><br><br>
  <%= f.submit "Sign Up",  class: "btn btn-primary" %>
<% end %>

</div>

</div>
</div>
