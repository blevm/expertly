<div style="padding: 50px 300px 0px 300px;">
  <div align="center" class="jumbotron" style="padding:30px 0px; min-width: 450px; background-color: rgba(233, 236, 239, 0.9);">
    <div class="container" style="padding: 0px 50px 0px 50px;  max-width: 550px; min-width: 300px;" align="center">

    <h1>Log in!</h1>

    <% if flash[:errors] %>
      <ul>
        <% flash[:errors].each do |e| %>
          <li><%= e %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_tag sessions_path do %>
      <div class="form-inline">
        <%= label_tag "Username", nil, style: 'padding-right: 10px;' %>
        <%= text_field_tag :username, nil, class: 'form-control', style: 'min-width: 350px;'  %>
      </div>
      <div class="form-inline" style='padding-top: 15px;'>
        <%= label_tag "Password", nil, style: 'padding-right: 10px;' %>
        <%= password_field_tag :password, nil, class: 'form-control', style: 'min-width: 354px;' %>
      </div>
      <div class="form-group" style='padding-top: 15px;'>
        <%= submit_tag "Log In" %>
      </div>
    <% end %>

    </div>
  </div>
</div>
